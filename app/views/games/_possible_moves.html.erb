  <table>
    <tr>
      <th>moves</th>
      <th colspan ="1"></th>
    </tr>
    <tr>
      <td><%= radio_button_tag(:move, "income") %></td>
      <td><%= label_tag(:move_detail, "income") %></td>
    </tr>
    <tr>
      <td><%= radio_button_tag(:move, "fa") %></td>
