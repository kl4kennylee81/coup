    </tr>
    <tr>
      <td><%= radio_button_tag(:move, "coup") %></td>
      <td><%= label_tag(:move_detail, "coup") %></td>
    </tr>
    <tr>
      <td><%= radio_button_tag(:move, "duke") %></td>
      <td><%= label_tag(:move_detail, "tax") %></td>
    </tr>
    <tr>
      <td><%= radio_button_tag(:move, "ambassador") %></td>
      <td><%= label_tag(:move_detail, "exchange") %></td>
    </tr>
    <tr>
